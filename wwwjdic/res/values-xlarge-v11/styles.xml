  </style>
  
  <style name="hkr_toolbar_button">
    <item name="android:layout_height">fill_parent</item> 
    <item name="android:layout_width">0px</item>
    <item name="android:layout_weight">1</item> 
    <item name="android:textSize">@dimen/hkr_toolbar_text_size</item> 
  </style>
  
  <style name="hkr_toolbar_checbox">
    <item name="android:layout_height">wrap_content</item> 
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textSize">@dimen/hkr_toolbar_text_size</item> 
  </style>
  
  <style name="krad_chart_button">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:gravity">center</item> 
  </style>
  
  <style name="small_button"/>
  
  <style name="search_input">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_marginTop">50dp</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:layout_marginLeft">40dp</item>
    <item name="android:layout_marginRight">40dp</item> 
    <item name="android:inputType">text</item> 
    <item name="android:lines">1</item>
  </style>
  
  <style name="search_option">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/search_option_text_size</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style> 
  
  <style name="search_button">
    <item name="android:layout_height">wrap_content</item> 
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_marginLeft">180dp</item>
    <item name="android:layout_marginRight">180dp</item>
   </style> 
   
    <style name="action_bar_title">
