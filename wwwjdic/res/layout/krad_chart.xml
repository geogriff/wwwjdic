<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
      android:id="@+id/matched_kanji"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:gravity="center"
      android:text="@string/no_matches"
      android:textSize="@dimen/krad_chart_matched_kanji_size"
      android:singleLine="true" />
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/total_matches"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/krad_chart_total_kanji_size"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:singleLine="true" />
      <Button
        android:id="@+id/show_all_button"
        style="@style/krad_chart_button"
        android:text="@string/show_all"/>
      <Button
        android:id="@+id/clear_button"
        style="@style/krad_chart_button"
        android:text="@string/clear"/>
    </LinearLayout>
  </LinearLayout>
  <View
    android:id="@+id/divider"
    android:background="@color/semi_white"
    android:layout_width="fill_parent"
    android:layout_height="1dp" />
  <GridView
    android:id="@+id/kradChartGrid"
    android:layout_width="fill_parent"
    android:layout_height="0px"
    android:layout_weight="1"
    android:columnWidth="@dimen/krad_chart_column_width"
    android:numColumns="auto_fit"
    android:verticalSpacing="2dp"
    android:horizontalSpacing="2dp"
    android:stretchMode="columnWidth"
    android:gravity="center" />
</LinearLayout>
